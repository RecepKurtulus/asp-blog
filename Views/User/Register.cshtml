@model RegisterViewModel
    <div class="space2">
        <div class="container ">
            <div class="row justify-content-center">
                <div class="col-xl-6">
                    <div class="quote-form-box">
                        <h4 class="form-title">Kayıt Ol</h4>
                        <form asp-action="Register" method="post" class="contact-form ajax-contact" novalidate>
                            <div asp-validation-summary="ModelOnly"></div>
                                <div class="form-group">
                                    <input type="text" class="form-control" asp-for="UserName" placeholder="Kullanıcı Adı">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control"asp-for="UserMail" placeholder="Email Adresi">
                                    <span asp-validation-for="UserMail" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" asp-for="UserHash" placeholder="Şifre">
                                    <span asp-validation-for="UserHash" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Şifre Tekrarı">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                                </div>
                                <div class="mb-3">
                                <input class="pt-2" id="formFileSm" type="file">
                                    <span asp-validation-for="UserName" class="text-danger"></span>

                                </div>
                                <div class="form-btn col-12">
                                    <button type="submit" class="th-btn">Kayıt Ol ✍️</button>
                                </div>
                            
                            <p class="form-messages mb-0 mt-3"></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div> 

   