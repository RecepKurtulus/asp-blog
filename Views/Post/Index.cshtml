==============================-->
    <section class="space-top space-extra-bottom">
        <div class="container">
            <div class="row">
                <div class="col-xxl-9 col-lg-8">
                    <div class="mb-30">
                    @foreach(var post in Model.Posts){
                        <div class="border-blog2">
                            <div class="blog-style4">
                                <div class="blog-img w-386">
                                    <img src="~/img/blog/blog_6_4_1.jpg" alt="blog image">
                                </div>
                                <div class="blog-content">
                                    <a data-theme-color="#FF9500" href="blog.html" class="category"></a>
                                    <h3 class="box-title-30"><a class="hover-line" href="blog-details.html">@post.PTitle</a></h3>
                                    <p class="blog-text">Encapsulates the belief that embracing diversity and engaging in Constructive dialogue are fundamental to the growth</p>
                                    <div class="blog-meta">
                                        <a href="author.html"><i class="far fa-user"></i>By - Tnews</a>
                                        <a href="blog.html"><i class="fal fa-calendar-days">@post.PPublishedOn</i></a>
                                    </div>
                                    <a href="blog-details.html" class="th-btn style2">Read More<i class="fas fa-arrow-up-right ms-2"></i></a>
                                </div>

                            </div>
                        </div>
                    }
                        

                        
                    </div>
                    <div class="th-pagination mt-40">
                        <ul>
                            <li><a href="blog.html">01</a></li>
